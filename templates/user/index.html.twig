{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Username</th>
            <th>UsernameCanonical</th>
            <th>Email</th>
            <th>EmailCanonical</th>
            <th>Enabled</th>
            <th>Salt</th>
            <th>Password</th>
            <th>LastLogin</th>
            <th>ConfirmationToken</th>
            <th>PasswordRequestedAt</th>
            <th>Roles</th>
            <th>Id</th>
            <th>LastActivityAt</th>
            <th>Telnr</th>
            <th>Mobilenr</th>
            <th>Firstname</th>
            <th>Insertionname</th>
            <th>Lastname</th>
            <th>Adres</th>
            <th>Zip</th>
            <th>City</th>
            <th>Country</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.usernameCanonical }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.emailCanonical }}</td>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
                <td>{{ user.salt }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.confirmationToken }}</td>
                <td>{{ user.passwordRequestedAt ? user.passwordRequestedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>{{ user.id }}</td>
                <td>{{ user.lastActivityAt }}</td>
                <td>{{ user.telnr }}</td>
                <td>{{ user.mobilenr }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.insertionname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.adres }}</td>
                <td>{{ user.zip }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.country }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="23">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}